<h1>All cocktails</h1>

<h4><%= link_to '<i class="far fa-plus-square"></i> Add a new Cocktail'.html_safe, new_cocktail_path(@cocktail) %></h4>


<% @cocktails.each do |cocktail| %>
  <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
  <h3><%= link_to 'Delete', cocktail_path(cocktail), method: :delete %></h3>
<% end %>
